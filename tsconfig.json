{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "typeRoots": ["./.yarn/cache", "./node_modules/@types"],
    "types": ["react", "react-dom"]
  },
  "include": ["src"]
}
